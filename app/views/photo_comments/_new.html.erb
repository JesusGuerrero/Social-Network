<% @photocomment = PhotoComment.new( :user_id => current_user.id )%>
<% form_for @photocomment do |f| %>
  <%= f.error_messages %>
	<%= f.hidden_field :photo_id %>
	<%= f.hidden_field :user_id %>
	<%=hidden_field_tag "name", @network.name %>
	<%=hidden_field_tag "p_id", params[:p_id] %>
  <%= f.label :ADD_Comment %><br />
	<%= f.text_field :content, :style=>"width:100%" %><br />
  <%= f.submit "POST" %>
<% end %>
