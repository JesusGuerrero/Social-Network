<div id="header" class="round">
	<div id="title">
<%	if current_user
			logo_link = root_path
		else
			logo_link = signin_path
		end
%>			
		<div style="float:right; margin-right:20px"><%=@user.name%></div>
		<h1><%= link_to "Collaborative Networking", logo_link %></h1>
	</div>
	<div id="myNavigation">
		<% if current_user %>
		<ul>
			<li><%= link_to "Main", root_url %></li>
			<li><%= link_to "My Profile", :controller => "users", :action=>"view", :id => current_user.id %></li>
			<li><%= link_to "People", people_path %></li>
			<li><%= link_to "Messages", messages_path %></li>
			<li><%= link_to "Settings", edit_user_path(current_user) %></li>	
			<li><%= link_to "Sign Out", signout_path %></li>		
		</ul>
		<% else %>
		<ul id="require_no_user">
     <li><%= link_to "Sign in", signin_path %></li>
	   <li><%= link_to "Register", signup_path %></li>
  	 <li><%= link_to "About Us", about_path %></li>
		</ul>
    <% end %>
		<% if current_user && current_user.admin? %>		
		<br/>
		<ul>
			<li><%= link_to "All Users", users_path %></li>
			<li><%= link_to "Networks", networks_path %></li>
  	</ul>
		<% end %>
	</div>
	<div style="clear:both"></div>
</div>
