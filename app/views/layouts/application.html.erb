<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html lang="en" xml:lang="en" xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= title %></title>
	<%= render 'layouts/stylesheets' %>
	<%= javascript_include_tag 'jquery' %>
	<%= javascript_include_tag :defaults %>
	<script src="http://js.pusherapp.com/1.8/pusher.min.js" type="text/javascript"></script>
  <script type="text/javascript">
    // Enable pusher logging - don't include this in production
    Pusher.log = function(message) {
      if (window.console && window.console.log) window.console.log(message);
    };

    // Flash fallback logging - don't include this in production
    WEB_SOCKET_DEBUG = true;

    var pusher = new Pusher('5a235f76592addeec334');
    var channel = pusher.subscribe('test_channel');
    channel.bind('my_event', function(data) 
			{
				var textNode = document.createElement( "p" );
				textNode.innerHTML = data;
				document.getElementById('resources').appendChild( textNode );
    	});
  </script>
  </head>
  <body>
		<% if @user = current_user %>
			<%= render( 'users/controls') %>
		<% end %>
		<div class="container" class="round">
			<%= render 'layouts/header' %>
	    <div id="content" class="round">
				<div id="menu">
					<%= render 'users/user_info' %>
					<%= render 'users/resources' %>
					<% form_remote_tag :url => { :action => 'add_attribute', :id => 1 } do %>
						<%= submit_tag "Add to Cart" %>
					<% end %>
				</div>
				<div id="body">
					<% flash.each do |key, value| %>
			    	<%= content_tag(:div, value, :class => "flash #{key}" ) %>
					<% end %>
					<%= yield %>
				</div>
				<div style="clear:both"></div>
    	</div>
			<div style="clear:both"></div>
			<%= render 'layouts/footer' %>
			<%= debug(params) if Rails.env.development? %>
		</div>	
  </body>
</html>
