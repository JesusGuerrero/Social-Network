<h1>Register</h1>

<% form_for @user do |f| %>
  <%= f.error_messages %>
  <%= f.label :name %><br />
	<%= f.text_field :name %><br />
	<br />
	<%= f.label :email %><br />
	<%= f.text_field :email %><br />
	<br />
	<%= f.label :password %><br />	
	<%= f.password_field :password %><br />
	<br />
	<%= f.label :password_confirmation %><br />
	<%= f.password_field :password_confirmation %><br />
  <%= f.submit "Register" %>
<% end %>
