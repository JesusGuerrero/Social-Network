<%
ids = Array.new
%>
<%	@user.networks.each do |network2| 
 ids.push network2.id
		end %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
<% @networks.each do |network| %>
		<% unless ids.include?( network.id ) %>
  <tr>
    <td><%=h network.name  %></td>
    <td><%=h network.description %></td>
		<% @membership.network_id = network.id %>
    <td><% form_for @membership do |f| %>
	<%= f.hidden_field :network_id  %>
	<%= f.hidden_field :user_id  %>
  <%= f.submit "Add" %>
<% end %>
  </tr>
		<% end %>
<% end %>
</table>
