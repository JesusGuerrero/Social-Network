<h3>My Networks</h3>
	<% @user.networks.each do |m| %>
		<div class="network-feed">
			<div class="nf-title"><%= link_to m.name, :controller => "networks", :action => "show", :name => m.name %>
				<div class="nf-title-action">
					<% form_tag('/microposts/new') do -%>
						<%=hidden_field_tag 'id', m.id %>
						<%=submit_tag 'POST' %>
 					<% end -%>
				</div>
			</div>

			<div class="nf-body">
<% 	@microposts = Micropost.find_all_by_network_id( m.id )
		if @microposts.count != 0
			@microposts.each do |n|  %>
				<div style="position:relative">
<%			if n.user_id == current_user.id %>
					<div class="nf-body-action"><%= link_to 'Destroy', n, :confirm => 'Are you sure?', :method => :delete %></div>
			<%end
				%>
				<div><%=n.content%></div>
				</div>
<%		end
		 else %>
			No Messages
	<% end %>
			</div>
		</div>
	<%  end %>
